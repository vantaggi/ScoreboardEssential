<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_asphalt_main"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        app:layout_boxedEdges="all">

        <!-- Horizontal Guidelines to define safe zones -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <!-- Vertical Guideline to separate teams -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Match Timer - Top Center -->
        <TextView
            android:id="@+id/match_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="@dimen/wear_timer_text_size"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="@color/stencil_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"/>

        <!-- Team 1 Score - Left Side, Centered -->
        <FrameLayout
            android:id="@+id/team1Container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_center">

            <TextView
                android:id="@+id/team1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="@dimen/wear_score_text_size"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/team_spray_yellow"/>
        </FrameLayout>

        <!-- Team 2 Score - Right Side, Centered -->
        <FrameLayout
            android:id="@+id/team2Container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/team2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="@dimen/wear_score_text_size"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/team_electric_green"/>
        </FrameLayout>

        <!-- Vertical Separator between scores -->
        <View
            android:id="@+id/score_separator"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/sidewalk_gray"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
            app:layout_constraintStart_toStartOf="@id/guideline_center"
            app:layout_constraintEnd_toEndOf="@id/guideline_center"/>

        <!-- Keeper Timer - Above Reset Button -->
        <TextView
            android:id="@+id/keeper_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEEPER"
            android:textSize="@dimen/wear_keeper_timer_text_size"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/graffiti_pink"
            android:visibility="visible"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toTopOf="@id/btn_start_new_match"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Reset Button - Bottom Center -->
        <Button
            android:id="@+id/btn_start_new_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/sidewalk_gray"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="@dimen/wear_button_text_size"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.wear.widget.BoxInsetLayout>
