<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scoreboardessential.MainActivity">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Team 1 (Left side) -->
    <View
        android:id="@+id/team1_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/team1_orange_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />

    <TextView
        android:id="@+id/team1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/team1_orange"
        android:textAppearance="@style/TextAppearance.Scoreboard.Score"
        app:layout_constraintTop_toTopOf="@id/team1_background"
        app:layout_constraintBottom_toBottomOf="@id/team1_background"
        app:layout_constraintStart_toStartOf="@id/team1_background"
        app:layout_constraintEnd_toEndOf="@id/team1_background"
        tools:text="12" />

    <!-- Clickable areas for Team 1 -->
    <View
        android:id="@+id/team1_increment_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team1_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />

    <View
        android:id="@+id/team1_decrement_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/team1_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />


    <!-- Team 2 (Right side) -->
    <View
        android:id="@+id/team2_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/team2_lime_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/team2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/team2_lime"
        android:textAppearance="@style/TextAppearance.Scoreboard.Score"
        app:layout_constraintTop_toTopOf="@id/team2_background"
        app:layout_constraintBottom_toBottomOf="@id/team2_background"
        app:layout_constraintStart_toStartOf="@id/team2_background"
        app:layout_constraintEnd_toEndOf="@id/team2_background"
        tools:text="8" />

    <!-- Clickable areas for Team 2 -->
    <View
        android:id="@+id/team2_increment_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team2_score"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/team2_decrement_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/team2_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Timers -->
    <TextView
        android:id="@+id/matchTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/on_surface_light"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="12:34" />

    <TextView
        android:id="@+id/keeperTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/action_blue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="300" />

</androidx.constraintlayout.widget.ConstraintLayout>
