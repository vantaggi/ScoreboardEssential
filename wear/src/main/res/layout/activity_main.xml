<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_asphalt_main"
    tools:context="it.vantaggi.scoreboardessential.wear.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_boxedEdges="all">

        <!-- Guidelines -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Team 1 (Left side) -->
        <View
            android:id="@+id/team1_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_concrete_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />

        <TextView
            android:id="@+id/team1_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TEAM 1"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/team1_score"
            app:layout_constraintEnd_toEndOf="@id/team1_background"
            app:layout_constraintStart_toStartOf="@id/team1_background" />

        <TextView
            android:id="@+id/team1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?attr/textAppearanceDisplayLarge"
            android:textColor="@color/team1_color"
            app:layout_constraintTop_toTopOf="@id/team1_background"
            app:layout_constraintBottom_toBottomOf="@id/team1_background"
            app:layout_constraintStart_toStartOf="@id/team1_background"
            app:layout_constraintEnd_toEndOf="@id/team1_background"
            tools:text="12" />

        <!-- Clickable areas for Team 1 -->
        <View
            android:id="@+id/team1_increment_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/team1_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />

        <View
            android:id="@+id/team1_decrement_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/team1_score"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center" />


        <!-- Team 2 (Right side) -->
        <View
            android:id="@+id/team2_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_concrete_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/team2_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TEAM 2"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/team2_score"
            app:layout_constraintEnd_toEndOf="@id/team2_background"
            app:layout_constraintStart_toStartOf="@id/team2_background" />

        <TextView
            android:id="@+id/team2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?attr/textAppearanceDisplayLarge"
            android:textColor="@color/team2_color"
            app:layout_constraintTop_toTopOf="@id/team2_background"
            app:layout_constraintBottom_toBottomOf="@id/team2_background"
            app:layout_constraintStart_toStartOf="@id/team2_background"
            app:layout_constraintEnd_toEndOf="@id/team2_background"
            tools:text="8" />

        <!-- Clickable areas for Team 2 -->
        <View
            android:id="@+id/team2_increment_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/team2_score"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/team2_decrement_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/team2_score"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Timers -->
        <TextView
            android:id="@+id/matchTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12:34" />

        <ImageButton
            android:id="@+id/btn_start_new_match"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Start New Match"
            android:src="@drawable/ic_replay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/matchTimer"
            app:tint="@color/sidewalk_gray" />

        <TextView
            android:id="@+id/keeperTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="KEEPER"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.wear.widget.BoxInsetLayout>
