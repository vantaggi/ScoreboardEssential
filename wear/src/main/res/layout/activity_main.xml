<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="15dp"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_boxedEdges="all">

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/keeper_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:textSize="18sp"
                android:textColor="@color/sidewalk_gray"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Score Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Team 1 -->
            <FrameLayout
                android:id="@+id/team1Container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/team1_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="60sp"
                    android:gravity="center"
                    android:textColor="@color/orange_500"/>
            </FrameLayout>

            <!-- Team 2 -->
             <FrameLayout
                android:id="@+id/team2Container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/team2_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="60sp"
                    android:gravity="center"
                    android:textColor="@color/lime_A200"/>
            </FrameLayout>

        </LinearLayout>

        <!-- Reset Button -->
        <Button
            android:id="@+id/btn_start_new_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/sidewalk_gray"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>
