<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/asphalt_dark" tools:context=".MainActivity" tools:deviceIds="wear">

    <!-- Layer 1: Keeper Progress Ring (Bottom) -->
    <ProgressBar android:id="@+id/keeperProgressBar" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:indeterminate="false" android:max="300" android:progress="300" android:progressDrawable="@drawable/circular_progress_bar" />

    <!-- Layer 2: UI Content (Top) -->
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent" android:padding="4dp">

        <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.80" />

        <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline_center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintGuide_percent="0.5" />

        <!-- Connection Status Indicator -->
        <View android:id="@+id/connectionStatusIndicator" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/shape_circle" android:backgroundTint="@color/error_red" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" />

        <!-- Match Timer - Top Center -->
        <TextView android:id="@+id/matchTimer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00" android:textSize="@dimen/wear_timer_text_size" android:fontFamily="sans-serif-condensed" android:textStyle="bold" android:textColor="@color/stencil_white" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>

        <!-- Team 1 Score - Left Side -->
        <LinearLayout android:id="@+id/team1Container" android:layout_width="0dp" android:layout_height="0dp" android:orientation="vertical" android:gravity="center" app:layout_constraintTop_toBottomOf="@id/guideline_top" app:layout_constraintBottom_toTopOf="@id/guideline_bottom" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@id/guideline_center">

            <!-- Service Indicator Team 1 -->
            <View android:id="@+id/team1Service" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/shape_circle" android:backgroundTint="@color/team_spray_yellow" android:visibility="gone" android:layout_marginBottom="2dp"/>

            <TextView android:id="@+id/team1Sets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="12sp" android:textColor="@color/sidewalk_gray" android:visibility="gone"/>

            <TextView android:id="@+id/team1Score" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:gravity="center" android:text="0" android:maxLines="1" android:includeFontPadding="false" android:autoSizeTextType="uniform" android:autoSizeMinTextSize="12sp" android:autoSizeMaxTextSize="100sp" android:autoSizeStepGranularity="2sp" android:fontFamily="sans-serif-condensed" android:textStyle="bold" android:textColor="@color/team_spray_yellow"/>
        </LinearLayout>

        <!-- Team 2 Score - Right Side -->
        <LinearLayout android:id="@+id/team2Container" android:layout_width="0dp" android:layout_height="0dp" android:orientation="vertical" android:gravity="center" app:layout_constraintTop_toBottomOf="@id/guideline_top" app:layout_constraintBottom_toTopOf="@id/guideline_bottom" app:layout_constraintStart_toEndOf="@id/guideline_center" app:layout_constraintEnd_toEndOf="parent">

            <!-- Service Indicator Team 2 -->
            <View android:id="@+id/team2Service" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/shape_circle" android:backgroundTint="@color/team_electric_green" android:visibility="gone" android:layout_marginBottom="2dp"/>

            <TextView android:id="@+id/team2Sets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="12sp" android:textColor="@color/sidewalk_gray" android:visibility="gone"/>

            <TextView android:id="@+id/team2Score" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:gravity="center" android:text="0" android:maxLines="1" android:includeFontPadding="false" android:autoSizeTextType="uniform" android:autoSizeMinTextSize="12sp" android:autoSizeMaxTextSize="100sp" android:autoSizeStepGranularity="2sp" android:fontFamily="sans-serif-condensed" android:textStyle="bold" android:textColor="@color/team_electric_green"/>
        </LinearLayout>

        <!-- Keeper Timer Interaction Target - Center -->
        <TextView android:id="@+id/keeperTimer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="K" android:textSize="14sp" android:fontFamily="sans-serif-condensed" android:textStyle="bold" android:textColor="@color/graffiti_pink" android:padding="8dp" app:layout_constraintTop_toBottomOf="@id/matchTimer" app:layout_constraintBottom_toTopOf="@id/btn_start_new_match" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />

        <TextView android:id="@+id/servingSideLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="D" android:textSize="10sp" android:textColor="@color/stencil_white" android:textStyle="bold" android:visibility="gone" app:layout_constraintTop_toBottomOf="@id/keeperTimer" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />

        <TextView android:id="@+id/goldenPointIndicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GP" android:textSize="10sp" android:textColor="@color/error_red" android:textStyle="bold" android:visibility="gone" app:layout_constraintBottom_toTopOf="@id/btn_start_new_match" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />

        <!-- Reset Button - Bottom Center -->
        <Button android:id="@+id/btn_start_new_match" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RESET" style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@color/sidewalk_gray" android:fontFamily="sans-serif-condensed" android:textStyle="bold" android:textSize="@dimen/wear_button_text_size" android:minWidth="0dp" android:minHeight="0dp" android:paddingVertical="4dp" android:paddingHorizontal="12dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
