<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreboardEssential" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Scoreboard.Score" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="TextAppearance.Scoreboard.TeamName" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Widget.Scoreboard.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>