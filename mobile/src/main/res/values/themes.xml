<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScoreboardEssential" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Street Vibe Color Palette -->
        <item name="colorPrimary">@color/graffiti_pink</item>
        <item name="colorOnPrimary">@color/stencil_white</item>
        <item name="colorSecondary">@color/neon_cyan</item>
        <item name="colorOnSecondary">@color/stencil_white</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/stencil_white</item>
        <item name="android:colorBackground">@color/asphalt_dark</item>
        <item name="colorSurface">@color/concrete_gray</item>
        <item name="colorOnSurface">@color/stencil_white</item>
        <item name="colorOnSurfaceVariant">@color/sidewalk_gray</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/asphalt_dark</item>

        <!-- Street Vibe Typeface References -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.App.DisplayLarge.Street</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.App.HeadlineMedium.Street</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge.Street</item>

        <!-- Street Vibe Shape References -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.StreetCard</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.StreetButton</item>
    </style>

    <style name="Theme.ScoreboardEssential.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Street Vibe Type and Shape -->
    <style name="TextAppearance.App.DisplayLarge.Street" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.08</item>
    </style>
    <style name="TextAppearance.App.HeadlineMedium.Street" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.App.BodyLarge.Street" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ShapeAppearance.App.StreetCard" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ShapeAppearance.App.StreetButton" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.StreetBadge" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Street Vibe Button Text -->
    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Street Vibe Button Styles -->
    <style name="Widget.App.Button.Street" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.StreetButton</item>
    </style>

    <style name="Widget.App.Button.TextButton.Street" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.StreetButton</item>
    </style>

    <!-- Style for the team name editor dialog -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorSurface">@color/concrete_gray</item>
        <item name="colorOnSurface">@color/stencil_white</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.Dialog</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_concrete_card</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>
</resources>