<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScoreboardEssential" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/surface_dark</item>
        <item name="android:textColorSecondary">@color/on_surface_variant_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface_variant_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Scoreboard.Score" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">@font/robotocondensed_bold</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TextAppearance.Scoreboard.TeamName" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/robotocondensed_bold</item>
    </style>

    <style name="Widget.Scoreboard.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/action_blue</item>
        <item name="android:textColor">@color/surface_dark</item>
    </style>
</resources>