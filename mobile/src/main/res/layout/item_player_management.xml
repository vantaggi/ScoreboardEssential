<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_concrete_card"
        android:padding="16dp">

        <!-- Player Avatar -->
        <TextView
            android:id="@+id/player_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="A"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="J" />

        <!-- Player Info -->
        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Player Name"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/player_avatar"
            app:layout_constraintEnd_toStartOf="@id/stats_button"
            app:layout_constraintTop_toTopOf="@id/player_avatar"
            tools:text="John Doe" />

        <com.example.scoreboardessential.views.RoleBadgeGroup
            android:id="@+id/player_roles_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:chipSpacing="4dp"
            app:layout_constraintStart_toStartOf="@id/player_name"
            app:layout_constraintEnd_toStartOf="@id/stats_button"
            app:layout_constraintTop_toBottomOf="@id/player_name" />

        <!-- Stats -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/player_name"
            app:layout_constraintTop_toBottomOf="@id/player_roles_group">

            <TextView
                android:id="@+id/player_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš½ 0"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/team_spray_yellow"
                tools:text="âš½ 15" />

            <TextView
                android:id="@+id/player_appearances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ðŸŽ® 0"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/team_electric_green"
                tools:text="ðŸŽ® 10" />

        </LinearLayout>

        <!-- Stats Button -->
        <ImageButton
            android:id="@+id/stats_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_stats"
            app:tint="?attr/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>