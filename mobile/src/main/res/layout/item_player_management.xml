<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/concrete_gray"
    app:shapeAppearance="@style/ShapeAppearance.App.StreetCard"
    app:cardElevation="@dimen/card_elevation_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <!-- Player Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/player_avatar_card"
            android:layout_width="@dimen/avatar_size_large"
            android:layout_height="@dimen/avatar_size_large"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:shapeAppearance="@style/ShapeAppearance.App.StreetBadge"
            app:cardElevation="@dimen/card_elevation_none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/player_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="@color/stencil_white"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                tools:text="J" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Info -->
        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Player Name"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="@color/stencil_white"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/player_avatar_card"
            app:layout_constraintEnd_toStartOf="@id/stats_button"
            app:layout_constraintTop_toTopOf="@id/player_avatar_card"
            tools:text="John Doe" />

        <it.vantaggi.scoreboardessential.views.RoleBadgeGroup
            android:id="@+id/player_roles_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:chipSpacing="@dimen/chip_spacing_medium"
            app:layout_constraintStart_toStartOf="@id/player_name"
            app:layout_constraintEnd_toStartOf="@id/stats_button"
            app:layout_constraintTop_toBottomOf="@id/player_name" />

        <!-- Stats -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/player_name"
            app:layout_constraintTop_toBottomOf="@id/player_roles_group">

            <TextView
                android:id="@+id/player_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš½ 0"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/team_spray_yellow"
                android:fontFamily="sans-serif-condensed"
                tools:text="âš½ 15" />

            <TextView
                android:id="@+id/player_appearances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:text="ðŸŽ® 0"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="@color/team_electric_green"
                android:fontFamily="sans-serif-condensed"
                tools:text="ðŸŽ® 10" />

        </LinearLayout>

        <!-- Stats Button -->
        <ImageButton
            android:id="@+id/stats_button"
            android:layout_width="@dimen/avatar_size_large"
            android:layout_height="@dimen/avatar_size_large"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_stats"
            app:tint="@color/neon_cyan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
