<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp"
    android:minHeight="40dp">

    <View
        android:id="@+id/team_indicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/event_timestamp"
        app:layout_constraintBottom_toBottomOf="@id/event_description"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/event_timestamp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="00:00"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:fontFamily="monospace"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/event_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:text="Event description"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:lineSpacingMultiplier="1.1"
        app:layout_constraintTop_toBottomOf="@id/event_timestamp"
        app:layout_constraintStart_toStartOf="@id/event_timestamp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>