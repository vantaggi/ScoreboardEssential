<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="player"
            type="com.example.scoreboardessential.database.PlayerWithRoles" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_concrete_card"
            android:padding="12dp">

            <TextView
                android:id="@+id/player_avatar_textview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="@{String.valueOf(player.player.playerName.charAt(0))}"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="P" />

            <TextView
                android:id="@+id/player_name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@{player.player.playerName}"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                app:layout_constraintEnd_toStartOf="@+id/player_stats_textview"
                app:layout_constraintStart_toEndOf="@id/player_avatar_textview"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Player Name" />

            <TextView
                android:id="@+id/player_roles_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{player.getRolesText()}"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintEnd_toEndOf="@+id/player_name_textview"
                app:layout_constraintStart_toStartOf="@+id/player_name_textview"
                app:layout_constraintTop_toBottomOf="@id/player_name_textview"
                tools:text="Forward, Midfielder" />

            <TextView
                android:id="@+id/player_stats_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`Apps: ` + player.player.appearances + `, Goals: ` + player.player.goals}"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Apps: 10, Goals: 5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
